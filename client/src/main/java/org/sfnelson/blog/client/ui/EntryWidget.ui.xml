<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:widgets="urn:import:org.sfnelson.blog.client.widgets">
    <ui:style type="org.sfnelson.blog.client.ui.EntryWidget.Style">
        .controls {
            text-align: right;
            display: none;
        }
        .changed .controls, .editing .controls {
            display: block;
        }
        .article {
            border-left: solid 1px transparent;
        }
        .selected {
            border-left: solid 1px #00bfff;
        }
        .delete {
            display: none;
            position: absolute;
            right: 2px;
            font-size: 20px;
            line-height: 20px;
            text-align: center;
            width: 20px;
            padding: 1px;
            color: #aaa;
        }
        .delete:hover {
            color: #8b0000;
        }
        .selected .delete {
            display: block;
        }
        .editing .delete {
            display: none;
        }
    </ui:style>
    <widgets:ArticlePanel styleName="{style.article}">
        <g:Anchor ui:field="delete" styleName="{style.delete}" title="Delete">&#x2717;</g:Anchor>
        <widgets:HeaderPanel>
            <widgets:TitleWidget ui:field="title"></widgets:TitleWidget>
            <widgets:DateWidget ui:field="posted"></widgets:DateWidget>
        </widgets:HeaderPanel>
        <widgets:ContentWidget ui:field="content"></widgets:ContentWidget>
        <widgets:FooterPanel styleName="{style.controls}">
            <g:Button ui:field="save">Save</g:Button>
            <g:Button ui:field="cancel">Cancel</g:Button>
        </widgets:FooterPanel>
    </widgets:ArticlePanel>
</ui:UiBinder>