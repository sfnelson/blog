<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:widgets="urn:import:org.sfnelson.blog.client.widgets">
    <ui:style type="org.sfnelson.blog.client.ui.TaskWidget.Style">
        .widget {
            position: relative;
            margin: 0.3ex 0;
            padding: 0 1.5em 0 0;
            height: 3ex;
            line-height: 3ex;
            border-right: solid 0.5em transparent;
            color: #888;
        }

        .widget h1 {
            line-height: 3ex;
        }

        .widget h1 div {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: 80%;
        }

        .selected {
            border-color: #87ceeb;
        }

        .marks {
            position: absolute;
            top: 0;
            right: 0;
            width: 5em;
            display: none;
        }

        .selected .marks {
            display: block;
        }

        .editing .marks {
            display: none;
        }

        .complete, .progress, .abandon {
            color: #ddd;
            border: solid 1px transparent;
            float: left;
            text-align: center;
            width: 1.5em;
            margin: 0;
            padding: 0.1ex 0;
            background-color: white;
        }

        .complete:hover {
            color: green;
            border-color: green;
        }

        .progress:hover {
            color: blue;
            border-color: blue;
        }

        .abandon:hover {
            color: #8b0000;
            border-color: #8b0000;
        }

        .controls {
            position: absolute;
            right: 0;
            top: 0;
            display: none;
        }

        .editing .controls {
            display: block;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.widget}">
        <widgets:TitleWidget ui:field="title"></widgets:TitleWidget>
        <span class="{style.controls}">
            <g:Button ui:field="save">Save</g:Button>
            <g:Button ui:field="cancel">Cancel</g:Button>
        </span>
        <span class="{style.marks}">
            <g:Anchor ui:field="complete" title="Completed" styleName="{style.complete}">&#x2713;</g:Anchor>
            <g:Anchor ui:field="partial" title="Made Progress" styleName="{style.progress}">~</g:Anchor>
            <g:Anchor ui:field="abandon" title="Abandon" styleName="{style.abandon}">&#x2717;</g:Anchor>
        </span>
    </g:HTMLPanel>
</ui:UiBinder>