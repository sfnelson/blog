<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .widget {
            clear: both;
            width: 100%;
        }
        .complete, .progress, .delete {
            color: #ddd;
            border: solid 1px transparent;
            display: inline-block;
            padding: 0.1ex 0.3em;
            margin-left: 1px;
        }
        .complete:hover {
            color: green;
            border-color: green;
        }
        .progress:hover {
            color: gray;
            border-color: gray;
        }
        .delete:hover {
            color: #8b0000;
            border-color: #8b0000;
        }
        .marks {
            float: right;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.widget}">
        <g:InlineLabel ui:field="title"></g:InlineLabel>
        <span class="{style.marks}">
            <g:Anchor ui:field="complete" title="Completed" styleName="{style.complete}">&#x2713;</g:Anchor>
            <g:Anchor ui:field="partial" title="Progress" styleName="{style.progress}">~</g:Anchor>
            <g:Anchor ui:field="delete" title="Delete" styleName="{style.delete}">&#x2717;</g:Anchor>
        </span>
    </g:HTMLPanel>
</ui:UiBinder>